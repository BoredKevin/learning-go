{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "go: build package",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/build/${fileDirnameBasename}",
                "${fileDirname}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$go"
            ],
            "group": "build",
            "detail": "Build Go binary into build directory"
        }
    ]
}